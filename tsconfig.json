{
  "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "rootDir": "./src",
      "outDir": "./dist",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "moduleResolution": "node"
  },
  "include": [
      "src/**/*",
      "json/**/*",
      "config/**/*"
  ],
  "exclude": [
      "node_modules",
      "dist",
      "**/*.spec.ts",
      "**/*.test.ts",
      "**/__tests__/*"
  ]
}